<div class="w-2/5 mx-auto">
	<div
		class="bg-white shadow-md border border-gray-200 rounded-lg p-4 sm:p-6 lg:p-8 dark:bg-gray-800 dark:border-gray-700">
		<form class="space-y-6" action="#">
			<h3 class="text-xl font-medium text-gray-900 dark:text-white">註冊會員</h3>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
			
      <div class="name_container flex justify-between">
        <div class="field">
          <%= f.label :姓, for:"lastname", class:"text-sm font-medium text-gray-900 mb-2 dark:text-gray-300"%><br />
          <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", type:"text", name:"lastname", id:"lastname", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white", placeholder:"姓", required:"" %>
        </div>
        <div class="field">
          <%= f.label :名, for:"firstname", class:"text-sm font-medium text-gray-900 mb-2 dark:text-gray-300"%><br />
          <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", type:"text", name:"firstname", id:"firstname", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white", placeholder:"名", required:"" %>
        </div>
      </div>


      <div class="field">
        <%= f.label :email, for:"email", class:"text-sm font-medium text-gray-900 mb-2 dark:text-gray-300"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", type:"email", name:"email", id:"email", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white", placeholder:"name@company.com", required:"" %>
      </div>
      
      <div class="password_container flex justify-between">
        <div  class="field">
          <%= f.label :密碼, for:"password", class:"text-sm font-medium text-gray-900 mb-2 dark:text-gray-300"%>
          <% if @minimum_password_length %>
          <em>(至少<%= @minimum_password_length %>碼)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", type:"password", name:"password", id:"password", placeholder:"••••••••", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white", required:"" %>
        </div>
        
        <div  class="field">
          <%= f.label :密碼確認, for:"password", class:"text-sm font-medium text-gray-900 mb-2 dark:text-gray-300"%><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", type:"password", name:"password", id:"password", placeholder:"••••••••", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white", required:"" %>
        </div>
      </div>

      <div class="field">
        <%= f.label :備份信箱, for:"backup_email", class:"text-sm font-medium text-gray-900 mb-2 dark:text-gray-300"%><br />
        <%= f.email_field :backup_email, autofocus: true, autocomplete: "backup_email", type:"email", name:"backup_email", id:"backup_email", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white", placeholder:"backpup_email@company.com", required:"" %>
      </div>

      <div class="field">
        <%= f.label :手機號碼, for:"backup_phone", class:"text-sm font-medium text-gray-900 mb-2 dark:text-gray-300"%><br />
        <%= f.text_field :backup_phone, autofocus: true, autocomplete: "backup_phone", type:"text", name:"backup_phone", id:"backup_phone", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white", placeholder:"09XX-XXX-XXX", required:"" %>
      </div>
      
      <div class="actions">
        <%= f.submit "註冊", type:"submit", class:"w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
      </div>
      
      <% end %>
      
      <%= render "devise/shared/links" %>
		
    </form>
	</div>
</div>