<div class="w-2/5 mx-auto">
  <div class="bg-white shadow-md border border-gray-200 rounded-lg p-4">
    <div class="space-y-6">
      <h2 class="text-xl font-medium text-gray-900">註冊會員</h2>

      <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="name_container flex justify-between">
          <div class="field m-1.5">
            <%= f.label :姓, class:"text-sm font-medium text-gray-900 mb-2"%><br />
            <%= f.text_field :lastname, autofocus: true, autocomplete: "lastname", type:"text", name:"lastname", id:"lastname", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"%>
          </div>
          <div class="field m-1.5">
            <%= f.label :名, for:"firstname", class:"text-sm font-medium text-gray-900 mb-2"%><br />
            <%= f.text_field :firstname, autofocus: true, autocomplete: "firstname", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"%>
          </div>
        </div>

        <div class="field m-1.5">
          <%= f.label :email, class:"text-sm font-medium text-gray-900 mb-2" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"%>
        </div>

        <div class="password_container flex justify-between">
          <div class="field m-1.5">
            <%= f.label :設定密碼, class:"text-sm font-medium text-gray-900 mb-2" %>
            <% if @minimum_password_length %>
            <em>(至少<%= @minimum_password_length %>碼))</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
          </div>
          <div class="field m-1.5">
            <%= f.label :確認密碼, class:"text-sm font-medium text-gray-900 mb-2" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
          </div>
        </div>

        <div class="field m-1.5">
          <%= f.label :備份信箱, for:"backup_email", class:"text-sm font-medium text-gray-900 mb-2"%><br />
          <%= f.email_field :backup_email, autofocus: true, autocomplete: "backup_email", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5"%>
        </div>

        <div class="field m-1.5">
          <%= f.label :手機號碼, for:"backup_phone", class:"text-sm font-medium text-gray-900 mb-2"%><br />
          <%= f.text_field :backup_phone, autofocus: true, autocomplete: "backup_phone", class:"bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5" %>
        </div>

        <div class="actions m-1.5">
          <%= f.submit "註冊", class:"w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center" %>
        </div>

      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>